<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-337dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="1dp">

            <TextView
                android:id="@+id/stateTextOne"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#64B5F6"
                android:text="连接状态" />

            <TextView
                android:id="@+id/stateTextTwo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="#64B5F6"
                android:text="GPS状态" />

            <TextView
                android:id="@+id/stateTextThree"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#64B5F6"
                android:text="IMU状态" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_weight="1"
            android:padding="1dp">

            <com.baidu.mapapi.map.MapView
                android:id="@+id/bmapView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:clickable="true"
                android:minHeight="48dp" />
        </FrameLayout>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E8E4E4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="右转："
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/rightFlag"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="右转"
                        android:textColor="#ffff0000"
                        android:textSize="30sp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="左转："
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/leftFlag"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="左转"
                        android:textSize="30sp"
                        android:visibility="visible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#FFFFFFFF">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="GPS数据"
                            android:textAppearance="?android:attr/textAppearanceSmall" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="经度"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/green" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="纬度"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/red" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="速度"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/blue" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/text_sensors2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="GPS"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <TextView
                            android:id="@+id/gps_long"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/green" />

                        <TextView
                            android:id="@+id/gps_lat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/red" />

                        <TextView
                            android:id="@+id/gps_speed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/blue" />
                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#FFFFFFFF">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="IMU数据"
                            android:textAppearance="?android:attr/textAppearanceSmall" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="X"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/green" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Y"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/red" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Z"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/blue" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="加速计"
                            android:textAppearance="?android:attr/textAppearanceSmall" />


                        <TextView
                            android:id="@+id/accX"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/green" />


                        <TextView
                            android:id="@+id/accY"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/red" />


                        <TextView
                            android:id="@+id/accZ"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/blue" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="陀螺仪"
                            android:textAppearance="?android:attr/textAppearanceSmall" />


                        <TextView
                            android:id="@+id/gyroscopeX"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/green" />


                        <TextView
                            android:id="@+id/gyroscopeY"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/red" />


                        <TextView
                            android:id="@+id/gyroscopeZ"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/blue" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="磁力计"
                            android:textAppearance="?android:attr/textAppearanceSmall" />


                        <TextView
                            android:id="@+id/rotationX"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/green" />


                        <TextView
                            android:id="@+id/rotationY"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="纬度"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/red" />


                        <TextView
                            android:id="@+id/rotationZ"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="速度"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/blue" />

                    </TableRow>

                </TableLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/startYy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="30dp"
                        android:clickable="false"
                        android:text="正在启动鹰眼服务"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>